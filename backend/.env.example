# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/trainingpulse
DATABASE_POOL_SIZE=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
BULK_RATE_LIMIT_MAX_REQUESTS=10

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@trainingpulse.com
FROM_NAME=TrainingPulse

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=trainingpulse-uploads

# Microsoft Teams Integration
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/...

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Queue Configuration
QUEUE_DASHBOARD_USERNAME=admin
QUEUE_DASHBOARD_PASSWORD=secure-password

# Render.com Configuration (Production)
# These are automatically set by Render
RENDER_EXTERNAL_URL=
RENDER_SERVICE_NAME=